    "@material-ui/lab": "^4.0.0-alpha.60",
    "bcrypt": "^5.0.1",
    "config": "^3.3.6",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.12.0",
    "gravatar": "^1.8.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.13.2",
    "socket.io": "^4.1.3"
  },
  "devDependencies": {
    "concurrently": "^6.2.0"
  }
