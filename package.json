{
  "name": "messaging-app",
  "version": "1.0.0",
  "description": "simple messaging app",
  "main": "server.js",
  "scripts": {
    "start": "node server",
    "setup": "npm install && cd client && npm install",
    "server": "nodemon server",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\" ",
